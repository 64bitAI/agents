{
  "permissions": {
    "write": "ask-if-multi",
    "bash": "ask-for-commands",
    "edit": "allow"
  },
  "hooks": {
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": ".claude/hooks/agent-orchestrator"}]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [{"type": "command", "command": ".claude/hooks/report-monitor"}]
      },
      {
        "matcher": "Edit",
        "hooks": [{"type": "command", "command": ".claude/hooks/report-monitor"}]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": ".claude/hooks/route-to-agent"}]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [{"type": "command", "command": ".claude/hooks/Notification"}]
      }
    ]
  },
  "environmentVariables": {
    "PORTFOLIO_MODE": "personal",
    "REPORT_FORMAT": "markdown",
    "PORTFOLIO_SIZE": "500000",
    "FUND_NAME": "64bit Capital",
    "RISK_TOLERANCE": "moderate",
    "INVESTOR_TYPE": "high_net_worth_individual"
  },
  "development": {
    "test_data_directory": ".claude/test_data/",
    "debug_output": ".claude/debug/",
    "mock_mode": false
  }
}